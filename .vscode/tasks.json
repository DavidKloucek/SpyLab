{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run dev server",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "uvicorn",
                "app.main:app",
                "--reload"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run prod server",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "gunicorn",
                "-k",
                "uvicorn.workers.UvicornWorker",
                "-w",
                "4",
                "-b",
                "0.0.0.0:8000",
                "--timeout",
                "60",
                "--keep-alive",
                "5",
                "--log-level",
                "info",
                "--access-logfile",
                "-",
                "app.main:app"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run feeder",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "-m",
                "bin.feeder"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run dev cli script",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "-m",
                "bin.cli"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run dev ui-react",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ui-react"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run dev ui-ng",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ui-ng"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "orval: generate",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "orval"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ui-react"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "orval: watch",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "orval",
                "--watch"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ui-react"
            },
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}